<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.chemtrovina.cmtmsys.controller.MaterialCartController">

    <top>
        <VBox spacing="10">
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

            <!-- ComboBox chọn xe và nút thao tác -->
            <HBox spacing="10">
                <Label text="Chọn xe:" />
                <ComboBox fx:id="cbCartSelect" prefWidth="200" promptText="Chọn mã xe..." />
            </HBox>

            <!-- Các ô tìm kiếm -->
            <HBox spacing="10">
                <Label text="🔍 Mã cây:" />
                <TextField fx:id="txtScanTreeCode" prefWidth="200" promptText="Nhập mã cây hoặc quét mã..." />

                <Label text="🔍 Mã cuộn:" />
                <TextField fx:id="txtScanRollCode" prefWidth="200" promptText="Nhập mã cuộn hoặc quét mã..." />

                <Label text="🔍 Mã SAP:" />
                <TextField fx:id="txtScanSapCode" prefWidth="200" promptText="Nhập SAP code..." />

                <Button fx:id="btnSearch" text="🔎 Tìm" />
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.4" orientation="VERTICAL">

            <!-- Danh sách Cây -->
            <VBox spacing="5">
                <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                <Label text="📦 Danh sách cây trên xe" />
                <TableView fx:id="tblTrees">
                    <columns>
                        <TableColumn fx:id="colTreeCode" prefWidth="200" text="Mã cây" />
                        <TableColumn fx:id="colTreeCreated" prefWidth="200" text="Ngày tạo" />
                        <TableColumn fx:id="colTreeLevel" prefWidth="150" text="Tầng" />
                    </columns>
                </TableView>
            </VBox>

            <!-- Danh sách Cuộn trên cây -->
            <VBox spacing="5">
                <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                <Label text="🧵 Danh sách cuộn trong cây đã chọn" />
                <TableView fx:id="tblMaterials">
                    <columns>
                        <TableColumn fx:id="colRollCode" prefWidth="200" text="Mã cuộn" />
                        <TableColumn fx:id="colSapCode" prefWidth="150" text="SAP Code" />
                        <TableColumn fx:id="colQuantity" prefWidth="100" text="Số lượng" />
                        <TableColumn fx:id="colWarehouseName" prefWidth="150" text="Kho" />
                    </columns>
                </TableView>
            </VBox>

        </SplitPane>
    </center>

</BorderPane>
