<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox spacing="10"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.chemtrovina.cmtmsys.controller.EmployeeUpdateDialogController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <TextField fx:id="txtFullName" promptText="Họ tên"/>
    <TextField fx:id="txtCompany" promptText="Công ty"/>
    <TextField fx:id="txtGender" promptText="Giới tính"/>
    <TextField fx:id="txtPhone" promptText="Số điện thoại"/>
    <TextField fx:id="txtJobTitle" promptText="Chức vụ"/>
    <TextField fx:id="txtManager" promptText="Quản lý"/>
    <TextArea fx:id="txtNote" promptText="Ghi chú"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Lưu" onAction="#onSave"/>
        <Button text="Huỷ" onAction="#onCancel"/>
    </HBox>

</VBox>

