<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.chemtrovina.cmtmsys.controller.ShiftScheduleSMTController"
            prefWidth="900" prefHeight="600">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <!-- Title -->
        <Label text="Quản lý Ca Làm Việc (ShiftSchedule)"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Form nhập ca -->
        <HBox spacing="15">
            <Label text="Line:" />
            <ComboBox fx:id="cbWarehouse" prefWidth="150"/>

            <Label text="Ngày ca:" />
            <DatePicker fx:id="dpShiftDate" prefWidth="150"/>

            <Label text="Loại ca:" />
            <ComboBox fx:id="cbShiftType" prefWidth="120"/>

            <Label text="Start:" />
            <TextField fx:id="txtStartTime" promptText="08:00" prefWidth="100"/>

            <Label text="End:" />
            <TextField fx:id="txtEndTime" promptText="20:00" prefWidth="100"/>

            <Button fx:id="btnAddShift" text="Tạo Ca" />
            <Button fx:id="btnUpdateShift" text="Cập nhật" />
        </HBox>

        <!-- Table hiển thị ca -->
        <TableView fx:id="tblShifts" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colShiftId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colWarehouse" text="Line" prefWidth="150"/>
                <TableColumn fx:id="colShiftDate" text="Ngày" prefWidth="120"/>
                <TableColumn fx:id="colShiftType" text="Ca" prefWidth="100"/>
                <TableColumn fx:id="colStartTime" text="Bắt đầu" prefWidth="120"/>
                <TableColumn fx:id="colEndTime" text="Kết thúc" prefWidth="120"/>
                <TableColumn fx:id="colCreatedAt" text="Ngày tạo" prefWidth="150"/>
                <TableColumn fx:id="colActions" text="Thao tác" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
