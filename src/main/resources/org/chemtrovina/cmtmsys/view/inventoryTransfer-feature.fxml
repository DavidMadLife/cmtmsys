<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.chemtrovina.cmtmsys.controller.InventoryTransferController">

    <HBox spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

        <!-- LEFT SIDE: Input Fields -->
        <VBox prefWidth="300" spacing="8">
            <Label text="ID" />
            <TextField fx:id="txtEmployeeID" />

            <Label text="Kho hiện tại" />
            <ComboBox fx:id="cbSourceWarehouse" prefWidth="200" />

            <Label text="Kho chuyển đến" />
            <ComboBox fx:id="cbTargetWarehouse" prefWidth="200" />

            <Label text="Số mã vạch" />
            <TextField fx:id="txtBarcode" />

            <Label text="Mã SAP" />
            <TextField fx:id="txtSapCode" editable="false" style="-fx-background-color: #D3D3D3;" />

            <Label text="Spec" />
            <TextField fx:id="txtSpec" editable="false" style="-fx-background-color: #D3D3D3;" />

            <Label text="Số lượng" />
            <TextField fx:id="txtQuantity" editable="false" style="-fx-background-color: #D3D3D3;" />

            <Button fx:id="btnTransfer" text="Chuyển kho" />
        </VBox>

        <!-- RIGHT SIDE: Transferred Materials Table -->
        <VBox spacing="6" HBox.hgrow="ALWAYS">
            <Label alignment="CENTER" text="Danh sách đã chuyển" />
            <TableView fx:id="tblTransferred" prefWidth="600">
                <columns>
                    <TableColumn fx:id="colBarcode" text="Barcode" />
                    <TableColumn fx:id="colSapCode" text="SAP Code" />
                    <TableColumn fx:id="colSpec" text="Spec" />
                    <TableColumn fx:id="colQuantity" text="Qty" />
                    <TableColumn fx:id="colFromWarehouse" text="Từ kho" />
                    <TableColumn fx:id="colToWarehouse" text="Tới kho" />
                </columns>
            </TableView>
        </VBox>
    </HBox>
</AnchorPane>
