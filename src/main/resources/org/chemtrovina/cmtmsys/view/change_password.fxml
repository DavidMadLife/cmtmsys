<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.chemtrovina.cmtmsys.controller.ChangePasswordController" prefWidth="400" prefHeight="250">
    <children>
        <Label text="Mật khẩu cũ:" layoutX="50" layoutY="40"/>
        <PasswordField fx:id="txtOldPassword" layoutX="160" layoutY="35" prefWidth="180"/>

        <Label text="Mật khẩu mới:" layoutX="50" layoutY="80"/>
        <PasswordField fx:id="txtNewPassword" layoutX="160" layoutY="75" prefWidth="180"/>

        <Label text="Nhập lại:" layoutX="50" layoutY="120"/>
        <PasswordField fx:id="txtConfirmPassword" layoutX="160" layoutY="115" prefWidth="180"/>

        <Button text="Đổi mật khẩu" fx:id="btnChangePassword" layoutX="140" layoutY="170" prefWidth="120"/>
        <Label fx:id="lblMessage" layoutX="50" layoutY="210" style="-fx-text-fill: red;"/>
    </children>
</AnchorPane>
