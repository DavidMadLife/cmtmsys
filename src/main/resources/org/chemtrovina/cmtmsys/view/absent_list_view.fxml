<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/24"
            xmlns:fx="http://javafx.com/fxml/1"
                fx:controller="org.chemtrovina.cmtmsys.controller.AbsentListController"
            prefWidth="1100" prefHeight="650">

    <!-- ===== TOP BAR ===== -->
    <top>
        <VBox spacing="8" style="-fx-background-color: #f6f7fb;">
            <padding>
                <Insets top="12" right="14" bottom="12" left="14"/>
            </padding>

            <Label fx:id="lblTitle"
                   text="DANH SÁCH NGƯỜI VẮNG"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Ngày:" style="-fx-font-size: 13px;"/>
                <DatePicker fx:id="dpDate"/>

                <Button fx:id="btnReload"
                        text="Tải lại"
                        style="-fx-font-weight: bold;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label text="* Chỉ hiển thị người CHƯA ĐIỂM DANH (chưa IN)"
                       style="-fx-text-fill: #666; -fx-font-style: italic;"/>
            </HBox>
        </VBox>
    </top>

    <!-- ===== CENTER TABLE ===== -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="14" bottom="14" left="14"/>
            </padding>

            <TableView fx:id="tblAbsent"
                       prefHeight="600"
                       columnResizePolicy="CONSTRAINED_RESIZE_POLICY"
                       style="-fx-background-radius: 10; -fx-border-radius: 10;">
                <columns>
                    <TableColumn fx:id="colNo" text="STT" prefWidth="70"/>
                    <TableColumn fx:id="colCode" text="Mã NV" prefWidth="120"/>
                    <TableColumn fx:id="colName" text="Tên" prefWidth="240"/>
                    <TableColumn fx:id="colDept" text="Bộ phận" prefWidth="200"/>
                    <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="160"/>
                    <TableColumn fx:id="colAction" text="Hành động" prefWidth="140"/>
                </columns>

                <placeholder>
                    <Label text="Không có nhân viên chưa điểm danh trong ngày này."
                           style="-fx-text-fill: #999; -fx-font-size: 14px;"/>
                </placeholder>
            </TableView>

        </VBox>
    </center>

</BorderPane>
