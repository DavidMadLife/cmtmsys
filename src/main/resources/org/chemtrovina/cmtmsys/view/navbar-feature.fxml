<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ToolBar prefHeight="31.0" prefWidth="1252.0"
         AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="3.0"
         xmlns="http://javafx.com/javafx/23.0.1"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="org.chemtrovina.cmtmsys.controller.NavbarController">

    <items>

        <!-- Menu: Warehouse -->
        <MenuButton text="Warehouse" style="-fx-font-weight: bold;" prefWidth="126.0">
            <items>
                <MenuItem fx:id="btnInvoice" text="Invoice" />
                <MenuItem fx:id="btnScan" text="Scan" />
                <MenuItem fx:id="btnHistory" text="History" />
                <MenuItem fx:id="btnMOQ" text="MOQ" />
            </items>
        </MenuButton>

        <!-- Menu: Manage Employee -->
        <MenuButton text="Manage Employee" style="-fx-font-weight: bold;" prefWidth="160.0">
            <items>
                <MenuItem fx:id="btnEmployee" text="Employee" />
                <MenuItem fx:id="btnShiftScheduling" text="Shift Scheduling" />
            </items>
        </MenuButton>

        <!-- Menu: Inventory -->
        <MenuButton fx:id="menuInventory" text="Inventory" style="-fx-font-weight: bold;" prefWidth="126.0">
            <items>
                <MenuItem fx:id="menuInventoryCheck" text="Check Inventory" />
                <MenuItem fx:id="menuInventoryTransfer" text="Transfer Inventory" />
                <MenuItem fx:id="menuTransferLog" text="Transfer Log" />
                <MenuItem fx:id="menuProduct" text="Product" />
                <MenuItem fx:id="menuWorkOrder" text="W/O" />
            </items>
        </MenuButton>

    </items>
</ToolBar>
